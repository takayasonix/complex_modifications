{
  "title": "mains // fnを押しながらx/c/vを押すと、Backspace/Delete/Enterを送信する",
  "rules": [
    {
      "description": "mains // [fn]+[x]=[backspace]",
      "manipulators": [
        {
          "from": {
            "key_code": "x",
            "modifiers": { "mandatory": [ "fn" ] }
          },
          "to": [
            {"key_code": "backspace"}
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "mains // [fn]+[c]=[delete]",
      "manipulators": [
        {
          "from": {
            "key_code": "c",
            "modifiers": { "mandatory": [ "fn" ] }
          },
          "to": [
            {"key_code": "delete"}
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "mains // [fn]+[v]=[enter]",
      "manipulators": [
        {
          "from": {
            "key_code": "v",
            "modifiers": { "mandatory": [ "fn" ] }
          },
          "to": [
            {"key_code": "enter"}
          ],
          "type": "basic"
        }
      ]
    }
  ]
}